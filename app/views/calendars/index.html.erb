<div class="page-header">
  <h1>Calendars</h1>
</div>

<p><a href="/calendars/new" class="btn btn-primary">Add a New Calendar</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Year</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.year %></td>
        <td>
          <a href="/calendars/<%= calendar.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/calendars/<%= calendar.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_calendar/<%= calendar.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

