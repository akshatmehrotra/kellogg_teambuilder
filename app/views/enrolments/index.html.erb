<div class="page-header">
  <h1>Enrolments</h1>
</div>

<p><a href="/enrolments/new" class="btn btn-primary">Add a New Enrolment</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolments.each do |enrolment| %>
      <tr>
        <td><%= enrolment.student_id %></td>
        <td><%= enrolment.course_id %></td>
        <td>
          <a href="/enrolments/<%= enrolment.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/enrolments/<%= enrolment.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_enrolment/<%= enrolment.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

