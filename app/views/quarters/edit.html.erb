<div class="page-header">
  <h1>Edit Quarter #<%= @quarter.id %></h1>
</div>

<% if @quarter.errors.any? %>
  <% @quarter.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_quarter/<%= @quarter.id %>" class="form-horizontal">
  <!-- Label and input for term -->
  <div class="form-group">
    <label for="term" class="col-sm-2 control-label">
      Term
    </label>
    <div class="col-sm-10">
      <input type="text" id="term" name="term" placeholder="Term" class="form-control" value="<%= @quarter.term %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Quarter" class="btn btn-primary">
    </div>
  </div>
</form>
