<div class="page-header">
  <h1>Edit Membership #<%= @membership.id %></h1>
</div>

<% if @membership.errors.any? %>
  <% @membership.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_membership/<%= @membership.id %>" class="form-horizontal">
  <!-- Label and input for student_id -->
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">
      Student
    </label>
    <div class="col-sm-10">
      <input type="text" id="student_id" name="student_id" placeholder="Student" class="form-control" value="<%= @membership.student_id %>">
    </div>
  </div>

  <!-- Label and input for team_id -->
  <div class="form-group">
    <label for="team_id" class="col-sm-2 control-label">
      Team
    </label>
    <div class="col-sm-10">
      <input type="text" id="team_id" name="team_id" placeholder="Team" class="form-control" value="<%= @membership.team_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Membership" class="btn btn-primary">
    </div>
  </div>
</form>
