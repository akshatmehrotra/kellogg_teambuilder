<div class="page-header">
  <h1>Teams in <%= Course.find(@teams.first.course.id).full_title %></h1>
</div>

<p><a href="/teams/new" class="btn btn-primary">Add a New Team</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th>Show</th>
      <th>Join</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name.titleize %></td>
        <% course = Course.find(team.course_id) %>
        <td><%= course.quarter.term.capitalize %> <%= course.calendar.year %> <%= course.department.name %> <%= course.name %>-<%= course.section.number %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/memberships/new" class="btn btn-primary">
            <i class="fa fa-plus"></i>
          </a>
        </td>
        <td>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

