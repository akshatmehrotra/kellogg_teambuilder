<div class="page-header">
  <h1>Teams in <%= Course.find(@teams.first.course.id).full_title %> (Max Team Size = <%= @teams.first.course.team_size %>)</h1>
</div>

<p><a href="/teams/new" class="btn btn-primary">Create A New Team</a></p>

 <p><a href="/memberships/new" class="btn btn-primary">Join an Existing Team</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Show</th>
      <th>Join</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name.titleize %></td>


        <td><%= team.students.count %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/memberships/new" class="btn btn-primary">
            <i class="fa fa-plus"></i>
          </a>
        </td>
        <td>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

