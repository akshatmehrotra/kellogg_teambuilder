<div class="page-header">
  <h1>Create a New Team</h1>
</div>

<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/create_team" class="form-horizontal">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @team.name %>">
    </div>
  </div>

  <!-- Label and input for course_id -->
  <div class="form-group">
    <label for="course_id" class="col-sm-2 control-label">
      Course
    </label>
    <div class="col-sm-10">
      <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :full_title, @team.course_id)) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Team" class="btn btn-primary">
    </div>
  </div>
</form>
