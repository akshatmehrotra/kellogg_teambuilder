<div class="page-header">
   <h1>My Teams</h1>
 </div>

 <table class="table table-hover">
   <thead>
     <tr>
       <th>Team Name</th>
       <th>Course</th>
       <th></th>
       <th></th>
       <th></th>
     </tr>
   </thead>

   <tbody>
     <% @teams.each do |team| %>
       <tr>
         <td><%= team.name.titleize %></td>
         <td><%= team.course.quarter.term.titleize %> <%= team.course.calendar.year.to_s %> <%= team.course.department.name %><%= team.course.name %>-<%= team.course.section.number.to_s %></td>
         <td>
           <a href="/teams/<%= team.id %>" class="btn btn-primary">
             <i class="fa fa-search-plus"></i>
           </a>
         </td>
         <td>
           <a href="/team/<%= team.id %>/edit" class="btn btn-warning">
             <i class="fa fa-edit"></i>
           </a>
         </td>
         <td>
           <a href="/delete_team/<%= team.id %>" class="btn btn-danger">
             <i class="fa fa-trash-o"></i>
           </a>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>
