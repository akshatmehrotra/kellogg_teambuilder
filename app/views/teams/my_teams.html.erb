<div class="page-header">
   <h1>My Teams</h1>
 </div>

 <p><a href="/memberships/new" class="btn btn-primary">Join An Existing Team</a></p>
  <p><a href="/teams/new" class="btn btn-primary">Create A New Team</a></p>

 <table class="table table-hover">
   <thead>
     <tr>
       <th>Team Name</th>
       <th>Course</th>
       <th>Team Size</th>
       <th>Max Team Size</th>
       <th></th>
       <th></th>
       <th></th>
     </tr>
   </thead>

   <tbody>
     <% @teams.each do |team| %>
       <tr>
         <td><%= team.name.titleize %></td>
         <td><%= team.course.full_title %></td>
         <td><%= team.students.count %></td>
         <td><%= team.course.team_size %></td>

         <td>
           <a href="/teams/<%= team.id %>" class="btn btn-primary">
             <i class="fa fa-search-plus"></i>
           </a>
         </td>
         <td>
           <a href="/team/<%= team.id %>/edit" class="btn btn-warning">
             <i class="fa fa-edit"></i>
           </a>
         </td>
         <td>
           <a href="/delete_team/<%= team.id %>" class="btn btn-danger">
             <i class="fa fa-trash-o"></i>
           </a>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>
