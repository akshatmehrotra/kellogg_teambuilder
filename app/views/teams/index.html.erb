<div class="page-header">
  <h1>Teams</h1>
</div>

<p><a href="/teams/new" class="btn btn-primary">Add a New Team</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.course_id %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

