<div class="page-header">
  <h1>Team <%= @team.name.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt>Course</dt>
  <!-- <dd><%= @team.course_id %></dd> -->
  <% course = Course.find(@team.course_id) %>
  <dd><%= course.quarter.term.capitalize %> <%= course.calendar.year %> <%= course.department.name %> <%= course.name %>-<%= course.section.number %></dd>
  <dt>Team Size</dt>
  <dd><%= @team.students.count %></dd>
</dl>

<table class="table table-striped table-hover">
  <tr>
    <th>Image</th>
    <th>Student Name </th>
    <th>Program </th>
    <th>Student Email</th>
  </tr>
  <% @team.students.each do |student| %>
    <tr>
      <% if student.avatar_url.present? %>
        <td><img src="<%= student.avatar_url %>" class="img-circle" width="60" height="60"></td>
      <% else %>
        <td></td>
      <% end %>

      <% if student.name.present? %>
        <td><%= student.name %></td>
      <% else %>
        <td></td>
      <% end %>

      <% if student.program_id.present? %>
        <td><%= student.program.name %></td>
      <% else %>
        <td></td>
      <% end %>
      <td><%= student.email %></td>
    </tr>
  <% end %>
</table>
