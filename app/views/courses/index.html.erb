<div class="page-header">
  <h1>Courses</h1>
</div>

<p><a href="/courses/new" class="btn btn-primary">Add a New Course</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Instructor</th>
      <th>Calendar</th>
      <th>Quarter</th>
      <th>Department</th>
      <th>Team size</th>
      <th>Section</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.instructor %></td>
        <td><%= course.calendar_id %></td>
        <td><%= course.quarter_id %></td>
        <td><%= course.department_id %></td>
        <td><%= course.team_size %></td>
        <td><%= course.section_id %></td>
        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/courses/<%= course.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_course/<%= course.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

