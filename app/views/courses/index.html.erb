<div class="page-header">
  <h1>Courses</h1>
</div>

 <p><a href="/enrolments/new" class="btn btn-primary">Enroll in a Course</a></p>

<p><a href="/courses/new" class="btn btn-primary">Create A New Course</a></p>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Quarter</th>
      <th>Calendar</th>
      <th>Name</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.quarter.term.capitalize %></td>
        <td><%= course.calendar.year %></td>
        <td><%= course.department.name.upcase%> <%= course.name %>-<%= course.section.number %></td>
        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/courses/<%= course.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_course/<%= course.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

