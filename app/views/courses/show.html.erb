<div class="page-header">
  <h1>Course #<%= @course.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Quarter</dt>
  <dd><%= @course.quarter.term.capitalize %></dd>

  <dt>Year</dt>
  <dd><%= @course.calendar.year %></dd>

  <dt>Department</dt>
  <dd><%= @course.department.name %></dd>

  <dt>Name</dt>
  <dd><%= @course.name %></dd>

  <dt>Section</dt>
  <dd><%= @course.section.number %></dd>

  <dt>Instructor</dt>
  <dd><%= @course.instructor %></dd>

  <dt>Maximum Team Size </dt>
  <dd><%= @course.team_size %></dd>

</dl>
