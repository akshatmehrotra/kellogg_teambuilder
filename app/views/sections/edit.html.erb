<div class="page-header">
  <h1>Edit Section #<%= @section.id %></h1>
</div>

<% if @section.errors.any? %>
  <% @section.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_section/<%= @section.id %>" class="form-horizontal">
  <!-- Label and input for number -->
  <div class="form-group">
    <label for="number" class="col-sm-2 control-label">
      Number
    </label>
    <div class="col-sm-10">
      <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @section.number %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Section" class="btn btn-primary">
    </div>
  </div>
</form>
